{
  "name": "homebridge-zway-plugin",
  "version": "1.0.4-beta",
  "description": "homebridge-plugin for ZWay Server and RaZBerry",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmichas/homebridge-zway-plugin.git"
  },
  "preferGlobal": true,
  "keywords": [
    "homebridge-plugin",
    "Z-Way",
    "RaZBerry",
    "Z-Wave",
    "HomeKit"
  ],
  "engines": {
    "node": ">=14.18.1",
    "homebridge": ">=1.3.5"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**.ts --max-warnings=0",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "pushNewToRaspberry": "bash scripts/pushNewToRaspberry.sh",
    "pushOldToRaspberry": "bash scripts/pushOldToRaspberry.sh"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "debug": "^2.2.0",
    "nyc": "^15.1.0",
    "q": "1.4.x",
    "request": "2.74.0",
    "tough-cookie": "^2.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^16.10.9",
    "@types/q": "^1.5.5",
    "@types/tough-cookie": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "homebridge": "^1.3.5",
    "jest": "^29.6.1",
    "nodemon": "^2.0.20",
    "nyc": "*",
    "qunit": "*",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "author": "jmichas (https://github.com/jmichas)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jmichas/homebridge-zway-plugin/issues"
  },
  "homepage": "https://github.com/jmichas/homebridge-zway-plugin#readme"
}
